@model IEnumerable<HomeLib.Models.Book>

@{
    ViewData["Title"] = "Библиотека книг";
}

<h1>Библиотека книг</h1>

<div class="row mb-3">
    <div class="col-md-8">
        <form asp-action="Search" method="get" class="form-inline">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Поиск по названию, автору, жанру..." />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-primary">Поиск</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4 text-right">
        <a asp-action="Create" class="btn btn-primary">Добавить новую книгу</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        В библиотеке пока нет книг. <a asp-action="Create">Добавить первую книгу</a>
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Название</th>
                <th>Автор</th>
                <th>Год</th>
                <th>Жанр</th>
                <th>Язык</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Author)</td>
                    <td>@Html.DisplayFor(modelItem => item.PublishYear)</td>
                    <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Language)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.BookID" class="btn btn-info btn-sm">Просмотр</a>
                        <a asp-action="Edit" asp-route-id="@item.BookID" class="btn btn-warning btn-sm">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@item.BookID" class="btn btn-danger btn-sm">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}