@model HomeLib.Models.Book

@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"].ToString() == "Create" 
        ? "Добавить книгу" : "Редактировать книгу";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="@ViewContext.RouteData.Values["action"].ToString()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @if (ViewContext.RouteData.Values["action"].ToString() == "Edit")
            {
                <input type="hidden" asp-for="BookID" />
            }

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="PublishYear" class="control-label"></label>
                    <input asp-for="PublishYear" class="form-control" 
                           min="1000" max="@ViewBag.CurrentYear" />
                    <span asp-validation-for="PublishYear" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Genre" class="control-label"></label>
                    <select asp-for="Genre" asp-items="ViewBag.Genres" class="form-control">
                        <option value="">Выберите жанр</option>
                    </select>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Language" class="control-label"></label>
                    <select asp-for="Language" asp-items="ViewBag.Languages" class="form-control">
                        <option value="">Выберите язык</option>
                    </select>
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Publisher" class="control-label"></label>
                    <input asp-for="Publisher" class="form-control" />
                    <span asp-validation-for="Publisher" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="PageCount" class="control-label"></label>
                    <input asp-for="PageCount" class="form-control" min="1" />
                    <span asp-validation-for="PageCount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="TableOfContents" class="control-label"></label>
                <textarea asp-for="TableOfContents" class="form-control" rows="6" 
                          placeholder="Введите XML оглавление (опционально)"></textarea>
                <span asp-validation-for="TableOfContents" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
